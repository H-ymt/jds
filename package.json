{
  "name": "cfs",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "type": "module",
  "scripts": {
    "prepare": "husky",
    "check": "oxlint && oxfmt --write",
    "dev": "turbo dev",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "dev:native": "turbo -F native dev",
    "dev:web": "turbo -F web dev",
    "dev:server": "turbo -F server dev",
    "db:push": "turbo -F @cfs/db db:push",
    "db:studio": "turbo -F @cfs/db db:studio",
    "db:generate": "turbo -F @cfs/db db:generate",
    "db:migrate": "turbo -F @cfs/db db:migrate"
  },
  "dependencies": {
    "dotenv": "catalog:",
    "zod": "catalog:",
    "@cfs/env": "workspace:*"
  },
  "devDependencies": {
    "turbo": "^2.6.3",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "oxlint": "^1.34.0",
    "oxfmt": "^0.19.0",
    "typescript": "catalog:",
    "@types/node": "^22.13.11",
    "@cfs/config": "workspace:*"
  },
  "lint-staged": {
    "*": [
      "oxlint",
      "oxfmt --write"
    ]
  },
  "packageManager": "pnpm@10.26.1"
}
